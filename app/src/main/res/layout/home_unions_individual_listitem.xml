<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/containerMaster"
    android:padding="@dimen/standard_gap_large"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/containerIndividualRow"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="5">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/service_list_icon"
            android:layout_weight="1"
            android:src="@drawable/profile_default"
            android:id="@+id/ivUnionIcon"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="4">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hp_service"
                android:id="@+id/tvUnionName"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorTextBlackSeperators"
                android:layout_marginTop="@dimen/standard_gap_medium"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
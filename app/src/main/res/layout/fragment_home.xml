<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment"
    android:id="@+id/containerMaster"
    android:layout_marginBottom="58dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- Heading -->
        <LinearLayout
            android:id="@+id/containerHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTextBlackPrimary"
            android:orientation="horizontal"
            android:padding="@dimen/standard_gap_small"
            android:weightSum="9">

            <ImageView
                android:id="@+id/imgLocation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_location" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Roninaks Ventures Pvt. Ltd"
                android:textColor="@color/colorTextWhiteSecondary"
                android:id="@+id/tvLocation"/>

            <ImageView
                android:id="@+id/imgLocationDropDown"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_dropdown" />

            <ImageView
                android:id="@+id/imgNotification"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_notifications" />

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_account" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/containerContent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/containerRelative">
                <!-- Banner Image Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/home_banner"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/curve_background"
                    android:id="@+id/containerBanner">
                    <!-- Searchbar -->
                    <LinearLayout
                        android:id="@+id/containerSearchBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/standard_gap_medium"
                        android:layout_marginEnd="@dimen/standard_gap_medium"
                        android:layout_marginTop="@dimen/standard_gap_extra_small"
                        android:background="@drawable/card_background_shape"
                        android:orientation="horizontal"
                        android:padding="@dimen/standard_gap_large"
                        android:weightSum="9">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_logo"
                            android:layout_weight="1"/>
                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:hint="@string/hp_searchHint"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:id="@+id/etSearch"
                            android:background="@android:color/transparent"
                            android:inputType="text"/>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_search_blue"
                            android:layout_weight="1"
                            android:id="@+id/imgSearch"/>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_options"
                            android:layout_weight="1"
                            android:id="@+id/imgOptions"/>
                    </LinearLayout>
                </LinearLayout>
                <!-- Popular Categories Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/containerPopularCategories"
                    android:orientation="vertical"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="220dp"
                    android:background="@drawable/card_background_shape"
                    android:layout_marginEnd="@dimen/standard_gap_extra_small"
                    android:layout_marginStart="@dimen/standard_gap_extra_small">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_more"
                        android:layout_gravity="end"
                        android:textColor="@color/colorTextBlackSecondary"
                        android:textSize="@dimen/font_secondary_text"
                        android:layout_marginEnd="@dimen/standard_gap_medium"
                        android:layout_marginTop="@dimen/standard_gap_medium"
                        android:id="@+id/tvCategoriesMore"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/hp_popular_categories"
                        android:textSize="@dimen/font_list_title"
                        android:layout_marginStart="@dimen/standard_gap_medium"
                        android:id="@+id/tvPopularCategories"
                        android:textColor="@color/colorTextBlackPrimary"
                        android:textStyle="bold"
                        android:textAllCaps="true"/>
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rvPopularCategories">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
                <!-- Major Categories Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/containerPopularCategories"
                    android:id="@+id/containerMajorCategories"
                    android:orientation="vertical"
                    android:padding="@dimen/standard_gap_large">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hp_major_directories"
                        android:textAllCaps="true"
                        android:textColor="@color/colorTextBlackPrimary"
                        android:textSize="@dimen/font_list_title"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/standard_gap_medium"
                        android:layout_marginBottom="@dimen/standard_gap_medium"/>
                    <!-- Major Categories Row 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/containerMajorCategoriesRow1"
                        android:orientation="horizontal"
                        android:weightSum="4">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/card_background_shape"
                            android:id="@+id/containerDirectorySales">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/service_list_icon"
                                android:src="@drawable/ic_sales"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="@string/hp_sales"
                                android:textColor="@color/colorTextBlackPrimary"
                                android:textSize="@dimen/font_button"
                                android:textAllCaps="true" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/card_background_shape"
                            android:id="@+id/containerDirectoryRepairs">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/service_list_icon"
                                android:src="@drawable/ic_repairs"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="@string/hp_repairs"
                                android:textColor="@color/colorTextBlackPrimary"
                                android:textSize="@dimen/font_button"
                                android:textAllCaps="true"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/card_background_shape"
                            android:id="@+id/containerDirectoryService">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/service_list_icon"
                                android:src="@drawable/ic_services"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="@string/hp_service"
                                android:textColor="@color/colorTextBlackPrimary"
                                android:textSize="@dimen/font_button"
                                android:textAllCaps="true"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/card_background_shape"
                            android:id="@+id/containerDirectoryMovers">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/service_list_icon"
                                android:src="@drawable/ic_movers"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="@string/hp_movers"
                                android:textColor="@color/colorTextBlackPrimary"
                                android:textSize="@dimen/font_button"
                                android:textAllCaps="true"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!-- Major Categories Row 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/containerMajorCategoriesRow2"
                        android:orientation="horizontal"
                        android:weightSum="4">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/card_background_shape"
                            android:id="@+id/containerDirectoryHealth">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/service_list_icon"
                                android:src="@drawable/ic_health"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="@string/hp_health"
                                android:textColor="@color/colorTextBlackPrimary"
                                android:textSize="@dimen/font_button"
                                android:textAllCaps="true"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/card_background_shape"
                            android:id="@+id/containerDirectoryPersonal">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/service_list_icon"
                                android:src="@drawable/ic_personal"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="@string/hp_personal"
                                android:textColor="@color/colorTextBlackPrimary"
                                android:textSize="@dimen/font_button"
                                android:textAllCaps="true"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/card_background_shape"
                            android:id="@+id/containerDirectoryEats">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/service_list_icon"
                                android:src="@drawable/ic_eats"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="@string/hp_eats"
                                android:textColor="@color/colorTextBlackPrimary"
                                android:textSize="@dimen/font_button"
                                android:textAllCaps="true"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/card_background_shape"
                            android:id="@+id/containerDirectoryRest">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/service_list_icon"
                                android:src="@drawable/ic_rest"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="@string/hp_rest"
                                android:textColor="@color/colorTextBlackPrimary"
                                android:textSize="@dimen/font_button"
                                android:textAllCaps="true"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!-- Major Categories Row 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/containerMajorCategoriesRow3"
                        android:orientation="horizontal"
                        android:weightSum="4">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/card_background_shape">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/service_list_icon"
                                android:src="@drawable/ic_sales"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="@string/hp_sales"
                                android:textColor="@color/colorTextBlackPrimary"
                                android:textSize="@dimen/font_button"
                                android:textAllCaps="true"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/card_background_shape">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/service_list_icon"
                                android:src="@drawable/ic_sales"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="@string/hp_sales"
                                android:textColor="@color/colorTextBlackPrimary"
                                android:textSize="@dimen/font_button"
                                android:textAllCaps="true"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/card_background_shape">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/service_list_icon"
                                android:src="@drawable/ic_sales"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="@string/hp_sales"
                                android:textColor="@color/colorTextBlackPrimary"
                                android:textSize="@dimen/font_button"
                                android:textAllCaps="true"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/card_background_shape">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/service_list_icon"
                                android:src="@drawable/ic_sales"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="@string/hp_sales"
                                android:textColor="@color/colorTextBlackPrimary"
                                android:textSize="@dimen/font_button"
                                android:textAllCaps="true"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!-- Major Categories Row 4 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/containerMajorCategoriesRow4"
                        android:orientation="horizontal"
                        android:weightSum="4">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/card_background_shape"
                            android:id="@+id/containerDirectoryEvents">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/service_list_icon"
                                android:src="@drawable/ic_events"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="@string/hp_events"
                                android:textColor="@color/colorTextBlackPrimary"
                                android:textSize="@dimen/font_button"
                                android:textAllCaps="true"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/card_background_shape"
                            android:id="@+id/containerDirectoryBusiness">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/service_list_icon"
                                android:src="@drawable/ic_business"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="@string/hp_business"
                                android:textColor="@color/colorTextBlackPrimary"
                                android:textSize="@dimen/font_button"
                                android:textAllCaps="true"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/card_background_shape"
                            android:id="@+id/containerDirectoryRenovation">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/service_list_icon"
                                android:src="@drawable/ic_renovation"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="@string/hp_renovation"
                                android:textColor="@color/colorTextBlackPrimary"
                                android:textSize="@dimen/font_secondary_text"
                                android:textAllCaps="true"
                                android:maxLines="1"
                                android:autoSizeTextType="uniform"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/card_background_shape"
                            android:id="@+id/containerDirectoryMore">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/service_list_icon"
                                android:src="@drawable/ic_more"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="@string/more"
                                android:textColor="@color/colorTextBlackPrimary"
                                android:textSize="@dimen/font_button"
                                android:textAllCaps="true"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!-- Unions Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/home_union"
                    android:id="@+id/containerUnions"
                    android:orientation="vertical"
                    android:layout_below="@id/containerMajorCategories"
                    android:background="@drawable/card_background_shape"
                    android:layout_marginStart="@dimen/standard_gap_extra_small"
                    android:layout_marginEnd="@dimen/standard_gap_extra_small"
                    android:padding="@dimen/standard_gap_large">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_list_title"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextBlackPrimary"
                            android:text="@string/sr_union"
                            android:layout_weight="1"
                            android:textAlignment="textStart"
                            android:textAllCaps="true"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_secondary_text"
                            android:textColor="@color/colorTextBlackSecondary"
                            android:text="@string/view_more"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:id="@+id/tvUnionsMore"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorTextBlackSeperators"
                        android:layout_marginTop="@dimen/standard_gap_medium"/>
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rvUnions"></android.support.v7.widget.RecyclerView>
                </LinearLayout>
                <!-- Top Performers Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/containerTopPerformers"
                    android:padding="@dimen/standard_gap_large"
                    android:layout_below="@id/containerUnions">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:text="@string/hp_top_performers"
                        android:textSize="@dimen/font_list_title"
                        android:textColor="@color/colorTextBlackPrimary"
                        android:textStyle="bold"/>
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rvTopPerformers"></android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>


</FrameLayout>
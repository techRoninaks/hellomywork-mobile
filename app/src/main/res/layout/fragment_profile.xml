                                    android:id="@+id/Appreciation_BTN"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:layout_marginRight="10dp"
                                    android:background="@drawable/profile_postfilter_color_green"
                                    android:text="APPRECIATION"
                                    android:alpha="0.5"
                                    android:textColor="@color/colorTextWhitePrimary" />


                            </LinearLayout>
                        </HorizontalScrollView>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="-20dp">

                            <Button
                                android:id="@+id/button_ImageUpload"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_alignParentStart="true"
                                android:layout_marginBottom="20dp"
                                android:background="@drawable/card_background_shape"
                                android:textStyle="bold"
                                android:textAllCaps="false"
                                android:paddingLeft="@dimen/standard_gap_large"
                                android:paddingRight="@dimen/standard_gap_large"
                                android:text="Upload Image" />

                            <Button
                                android:id="@+id/button_Post"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="15dp"
                                android:layout_alignParentEnd="true"
                                android:textAllCaps="false"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:background="@drawable/career_button_color_radius"
                                android:text="Post"
                                android:textColor="@color/colorTextWhitePrimary" />

                        </RelativeLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="8dp"
                    android:layout_margin="@dimen/career_margin_left_right"
                    android:layout_marginLeft="@dimen/career_margin_left_right"
                    android:layout_marginRight="@dimen/career_margin_left_right">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ACTIVITY FEED"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:textColor="@color/colorTextBlackPrimary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            />

                        <HorizontalScrollView
                            android:layout_width="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:scrollbars="none">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginRight="5dp"
                                >

                                <Button
                                    android:id="@+id/Random_BTN2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:text="RANDOM"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginStart="10dp"
                                    android:textColor="@color/colorTextWhitePrimary"
                                    android:background="@drawable/profile_postfilter_color_black"/>

                                <Button
                                    android:id="@+id/ForSale_BTN2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:alpha="0.5"
                                    android:text="FOR SALE"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginStart="10dp"
                                    android:textColor="@color/colorTextWhitePrimary"
                                    android:background="@drawable/profile_postfilter_color_yellow"/>

                                <Button
                                    android:id="@+id/Required_BTN2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:alpha="0.5"
                                    android:text="REQUIRED"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginStart="10dp"
                                    android:textColor="@color/colorTextWhitePrimary"
                                    android:background="@drawable/profile_postfilter_color_mint"/>

                                <Button
                                    android:id="@+id/Offers_BTN2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:alpha="0.5"
                                    android:text="OFFERES"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginStart="10dp"
                                    android:textColor="@color/colorTextWhitePrimary"
                                    android:background="@drawable/profile_postfilter_color_blood"/>

                                <Button
                                    android:id="@+id/Achievement_BTN2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:alpha="0.5"
                                    android:text="ACHIEVEMENT"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginStart="10dp"
                                    android:textColor="@color/colorTextWhitePrimary"
                                    android:paddingLeft="@dimen/standard_gap_medium"
                                    android:paddingRight="@dimen/standard_gap_medium"
                                    android:background="@drawable/profile_postfilter_color_purple"/>

                                <Button
                                    android:id="@+id/Appreciation_BTN2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:alpha="0.5"
                                    android:text="APPRECIATION"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginStart="10dp"
                                    android:paddingLeft="@dimen/standard_gap_medium"
                                    android:paddingRight="@dimen/standard_gap_medium"
                                    android:textColor="@color/colorTextWhitePrimary"
                                    android:background="@drawable/profile_postfilter_color_green"/>

                            </LinearLayout>

                        </HorizontalScrollView>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/standard_gap_small"
                            android:layout_marginBottom="30dp"
                            android:orientation="vertical"
                            android:id="@+id/profileRecyclerView"
                            >

                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</ScrollView>
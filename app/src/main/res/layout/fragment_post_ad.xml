<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.PostAdFragment"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="8dp"
            android:background="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="POST YOUR ADS"
                    android:textColor="@color/colorTextBlackPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/Post_ad_Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="-10dp"
                    android:inputType="textCapSentences|textMultiLine"
                    android:lines="20"
                    android:minLines="1"
                    android:maxLines="60"
                    android:background="@drawable/career_edit_background"
                    android:hint="Post your ads"
                    android:textSize="14sp"
                    android:padding="10dp" />

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:scrollbars="none"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/Random_BTN"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/profile_postfilter_color_black"
                            android:text="RANDOM"
                            android:alpha="0.5"
                            android:textColor="@color/colorTextWhitePrimary" />

                        <Button
                            android:id="@+id/ForSale_BTN"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/profile_postfilter_color_yellow"
                            android:text="FOR SALE"
                            android:alpha="0.5"
                            android:textColor="@color/colorTextWhitePrimary" />

                        <Button
                            android:id="@+id/Required_BTN"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/profile_postfilter_color_mint"
                            android:text="REQUIRED"
                            android:alpha="0.5"
                            android:textColor="@color/colorTextWhitePrimary" />

                        <Button
                            android:id="@+id/Offers_BTN"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/profile_postfilter_color_blood"
                            android:text="OFFERES"
                            android:alpha="0.5"
                            android:textColor="@color/colorTextWhitePrimary" />

                        <Button
                            android:id="@+id/Achievement_BTN"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginRight="10dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:background="@drawable/profile_postfilter_color_purple"
                            android:text="ACHIEVEMENT"
                            android:alpha="0.5"
                            android:textColor="@color/colorTextWhitePrimary" />

                        <Button
                            android:id="@+id/Appreciation_BTN"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/profile_postfilter_color_green"
                            android:text="APPRECIATION"
                            android:alpha="0.5"
                            android:textColor="@color/colorTextWhitePrimary" />


                    </LinearLayout>
                </HorizontalScrollView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="-20dp">

                    <Button
                        android:id="@+id/button_ImageUpload"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="-5dp"
                        android:padding="@dimen/standard_gap_small"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="20dp"
                        android:text="Upload Image" />

                    <Button
                        android:id="@+id/button_Post"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="15dp"
                        android:layout_alignParentEnd="true"
                        android:background="@color/colorNavigationBarBkg"
                        android:text="Post"
                        android:textColor="@color/colorTextWhitePrimary" />

                </RelativeLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>
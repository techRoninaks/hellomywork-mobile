<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MoreOptionsFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llContainerHeader"
        android:paddingTop="@dimen/standard_gap_large"
        android:paddingBottom="@dimen/standard_gap_large"
        android:layout_marginBottom="@dimen/standard_gap_large">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="More Settings"
            android:textColor="@color/colorTextBlackPrimary"
            android:textStyle="bold"
            android:textSize="@dimen/font_page_title"
            android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/listview_moreoptions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/standard_gap_medium"/>

    <!-- TODO: Update blank fragment layout -->


</LinearLayout>
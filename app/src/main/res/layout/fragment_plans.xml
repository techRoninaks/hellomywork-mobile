                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_plans_secondary"
                            android:textColor="@color/colorTextWhitePrimary"
                            android:text="@string/plans_duration"
                            android:layout_marginTop="@dimen/plan_free_price_top_margin"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/standard_gap_extra_small"

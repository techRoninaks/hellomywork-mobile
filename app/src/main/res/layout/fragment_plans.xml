                    android:layout_height="243dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/plan_side_margin"
                    android:layout_marginEnd="@dimen/plan_side_margin"
                    android:background="@drawable/ic_free_plan"
                    android:orientation="vertical"
                    android:id="@+id/containerPlanFree">
                    <!-- Price -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_page_title_emphasis"
                        android:textColor="@color/colorTextWhitePrimary"
                        android:textAlignment="center"
                        android:text="@string/plans_price_free"
                        android:layout_marginTop="@dimen/plan_free_price_top_margin"
                        android:textStyle="bold"/>
                    <!-- Subtitle -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_plans_secondary"
                        android:textColor="@color/colorTextWhiteSecondary"
                        android:textAlignment="center"
                        android:text="Free membership" />

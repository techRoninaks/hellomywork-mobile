                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="@dimen/standard_gap_medium">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/plan_side_margin"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="@dimen/plan_details_icon"
                                android:layout_height="@dimen/plan_details_icon"
                                android:src="@drawable/ic_free"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/font_plans_secondary"
                                android:textColor="@color/colorTextWhiteSecondary"
                                android:textAlignment="center"
                                android:text="@string/plans_free_details_price"
                                android:layout_marginStart="@dimen/standard_gap_small"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_marginEnd="@dimen/standard_gap_large"
                            android:layout_marginStart="@dimen/standard_gap_medium">
                            <ImageView
                                android:layout_width="@dimen/plan_details_icon"
                                android:layout_height="@dimen/plan_details_icon"
                                android:src="@drawable/ic_limited"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/font_plans_secondary"
                                android:textColor="@color/colorTextWhiteSecondary"
                                android:textAlignment="center"
                                android:text="@string/plans_free_details_access"
                                android:layout_marginStart="@dimen/standard_gap_small"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!-- Details Row 2 -->

                        android:paddingEnd="@dimen/plan_side_margin"
                        android:layout_marginTop="@dimen/standard_gap_medium"
                        android:textStyle="bold"
                        android:id="@+id/btn_User"/>
                </LinearLayout>
                <!-- Premium Company -->

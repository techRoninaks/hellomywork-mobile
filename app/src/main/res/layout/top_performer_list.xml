<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/ll_list_top_performer">

    <LinearLayout
        android:id="@+id/llBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_gap_small"
        android:layout_marginRight="@dimen/standard_gap_small"
        android:layout_marginLeft="@dimen/standard_gap_small"
        android:weightSum="9">

        <TextView
            android:id="@+id/list_top_performer_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textColor="@color/colorTextBlackPrimary"
            android:layout_marginLeft="@dimen/standard_gap_large"
            android:layout_marginTop="@dimen/standard_gap_small"/>

        <TextView
            android:id="@+id/list_top_performer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User name "
            android:layout_weight="7"
            android:textColor="@color/colorTextBlackPrimary"
            android:layout_margin="@dimen/standard_gap_small"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/list_top_performer_conversions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="11 Conversions"
            android:textColor="@color/colorTextBlackPrimary"
            android:layout_margin="@dimen/standard_gap_small"/>


    </LinearLayout>


</LinearLayout>
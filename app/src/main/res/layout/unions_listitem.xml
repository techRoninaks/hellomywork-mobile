<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/containerMaster"
    android:padding="@dimen/standard_gap_large"
    android:orientation="vertical"
    android:background="@drawable/card_background_shape"
    android:layout_marginStart="@dimen/standard_gap_large"
    android:layout_marginEnd="@dimen/standard_gap_large"
    android:layout_marginBottom="@dimen/standard_gap_large">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/containerIndividualRow"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/service_list_icon"
            android:layout_weight="1"
            android:src="@drawable/profile_default"
            android:id="@+id/ivUnionIcon"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/hp_service"
            android:id="@+id/tvUnionName"/>
    </LinearLayout>
</LinearLayout>